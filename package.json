{
  "name": "@xv-town/lang-manage",
  "preferGlobal": true,
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "postinstall": "cd ./lang-service && pnpm install && cd ../lang-client && pnpm install",
    "dev:client": "cd lang-client && npm run start",
    "dev:service": "cd lang-service && npm run dev",
    "lint": "npm run lint:es && npm run lint:prettier",
    "lint:ts": "tsc --project ./tsconfig.json --noEmit",
    "lint:es": "eslint --ext .ts,.tsx ./ --cache --quiet",
    "lint:prettier": "prettier --list-different \"**/*.{ts,tsx,less,json,yml,yaml,md}\"",
    "fix": "npm run fix:es && npm run fix:prettier",
    "fix:es": "eslint --ext ..ts,.tsx ./ --cache --quiet --fix",
    "fix:prettier": "prettier --write \"**/*.{ts,tsx,less,json,yml,yaml,md}\""
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/node": "^16.10.1",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "@types/react-router-dom": "^5.3.0",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.25.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^7.0.4",
    "lerna": "^4.0.0",
    "lint-staged": "^12.1.2",
    "prettier": "^2.3.2",
    "typescript": "^4.4.3"
  },
  "lint-staged": {
    "**/*.ts?(x)": [
      "npm run lint",
      "npm run fix",
      "git add"
    ]
  }
}
